@page
@model NetRazorWebApp.Pages.Courses.EditModel
@{
    ViewData["Title"] = "Edit";
}

<br />
<h2 class="text-info">Editar Curso</h2>

<div class="border">
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Course.Id" />
        <div class="container" style="padding:30px;">
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2">
                        <label asp-for="Course.CourseName"></label>
                    </div>
                    <div class="col-sm-4">
                        <input asp-for="Course.CourseName" class="form-control" />
                    </div>
                    <span asp-validation-for="Course.CourseName" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2">
                        <label asp-for="Course.QuantityClasses"></label>
                    </div>
                    <div class="col-sm-4">
                        <input asp-for="Course.QuantityClasses" class="form-control" />
                    </div>
                    <span asp-validation-for="Course.QuantityClasses" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2">
                        <label asp-for="Course.Price"></label>
                    </div>
                    <div class="col-sm-4">
                        <input asp-for="Course.Price" class="form-control" />
                    </div>
                    <span asp-validation-for="Course.Price" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2 offset-sm-2">
                        <input type="submit" value="Update" class="btn btn-primary form-control">
                    </div>
                    <div class="col-sm-2">
                        <a asp-page="Index" class="btn btn-success form-control">Go back to list</a>
                    </div>

                </div>
            </div>

        </div>


    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}